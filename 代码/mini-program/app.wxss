/* 隐藏滚动条 */
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

page {
  position: relative;
  height: 100%;
  /* 色彩变量 */
  --theme-color: #FFA500;
  --theme-color-light-1: #F1C471;
  --theme-color-light-2: #FEC22C;


  --ground-color: #F4F4F4;
  --text-color-gray: #515151;
  --text-color-gray-light-1: #606060;
  --text-color-gray-light-2: #d4d4d4;
  --text-color-red: #C92D2D;

  background: var(--ground-color);
}

.main {
  position: relative;
  height: 100%;
  width: 100%;
}

.space {
  width: 100%;
  height: 20rpx;
  background: var(--ground-color);
}

.cover_layer {
  position: absolute;
  height: 100%;
  width: 100%;
  top: 0;
  background: rgba(0, 0, 0, 0.4);
}

.stars {
  background: url(data:image/png;base64,);
}

.on {
  background: url(data:image/png;base64,);
}