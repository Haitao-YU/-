page {
  height: 100%;
}

.head {
  height: 15%;
  display: flex;
  background: white;
}

.head .float {
  position: absolute;
  display: flex;
  right: 20rpx;
  top: 20rpx;
}

.head .float .item {
  background: var(--theme-color);
  border-radius: 15rpx;
  padding: 10rpx;
  margin: 5rpx;
  color: white;
  font-size: 24rpx;
  font-weight: bold;
}

.head .left {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}

.head .right {
  flex: 2;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
}

.head .right .row {
  width: 100%;
  display: flex;
  align-items: center;
}

.head .right .row .label {
  font-size: 25rpx;
  margin-right: 10rpx;
}

.head .right .row .value {
  font-size: 24rpx;
  color: var(--text-color-gray);
}

.head .left image {
  height: 120rpx;
  width: 120rpx;
  border-radius: 10rpx;
}

.menu_container {
  height: 77%;
  display: flex;
}

.menu_container .left_menu {
  flex: 2;
  margin-top: 10rpx;
  border-top-right-radius: 10rpx;
  overflow: hidden;
  background: white;

}

.menu_container .left_menu .menu_item {
  position: relative;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  color: var(--text-color-gray);
  border-left: 10rpx solid white;
}

.menu_container .left_menu .active {
  color: white;
  font-weight: bold;
  border-left: 10rpx solid var(--theme-color);
  background: var(--theme-color-light-1);
}

.menu_container .left_menu .menu_item .badge {
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  right: 10rpx;
  top: 10rpx;
  border-radius: 50%;
  background: red;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 20rpx;
  color: white;
}

.menu_container .right_content {
  flex: 5;
  background: var(--ground-color);
}

.menu_container .right_content .food_item {
  display: flex;
  margin: 10rpx;
  padding: 10rpx;
  background: white;
  border-radius: 10rpx;
}

.menu_container .right_content .food_item .image_info {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}

.menu_container .right_content .food_item .image_info image {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}

.menu_container .right_content .food_item .image_info .image_cover {
  position: absolute;
  background: rgba(0, 0, 0, 0.3);
  width: 200rpx;
  height: 200rpx;
  display: flex;
  color: white;
  justify-content: center;
  align-items: center;
}

.menu_container .right_content .food_item .text_info {
  position: relative;
  flex: 2;
}

.menu_container .right_content .food_item .text_info .name {
  margin: 15rpx;
  font-size: 34rpx;
  font-weight: bold;
  text-align: left;
}

.menu_container .right_content .food_item .text_info .remark {
  margin: 15rpx;
  font-size: 24rpx;
  color: var(--text-color-gray);
  text-align: left;
}

.menu_container .right_content .food_item .text_info .monthly_sales {
  margin: 15rpx;
  font-size: 24rpx;
  color: var(--text-color-gray);
  text-align: left;
}

.menu_container .right_content .food_item .text_info .price {
  width: 20%;
  margin: 15rpx;
  font-size: 34rpx;
  text-align: left;
  color: var(--text-color-red);
}

.menu_container .right_content .food_item .text_info .price text {
  font-size: 28rpx;
  font-weight: bold;
  color: var(--text-color-red);
}


.menu_container .right_content .food_item .text_info .count {
  position: absolute;
  right: 30rpx;
  bottom: 15rpx;
  display: flex;
}

.menu_container .right_content .food_item .text_info .count .btn {
  width: 45rpx;
  height: 45rpx;
  color: white;
  border-radius: 50%;
}

.menu_container .right_content .food_item .text_info .count .count_num {
  font-size: 34rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

/* 购物车页面 */
.cart_page {
  position: absolute;
  height: 50%;
  width: 100%;
  bottom: 8%;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  background: #ffff;
}

.cart_page .head {
  float: right;
  color: var(--text-color-gray);
}

.cart_page .head image {
  width: 24rpx;
  height: 24rpx;
  margin-top: 23rpx;
  margin-right: 5rpx;
}

.cart_page .head .clear {
  font-size: 24rpx;
  margin-top: 18rpx;
  margin-right: 40rpx;
}

.cart_page .cart_content {
  position: absolute;
  width: 100%;
  height: 85%;
  top: 15%;
  margin: 10rpx;
}

.cart_page .cart_content .cart_item {
  display: flex;
  margin: 10rpx;
  padding: 10rpx;
  border-top: lightgray 1rpx solid;
}

.cart_page .cart_content .cart_item .image_info {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}

.cart_page .cart_content .cart_item .image_info image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
}

.cart_page .cart_content .cart_item .text_info {
  position: relative;
  flex: 2;
}

.cart_page .cart_content .cart_item .text_info .name {
  margin: 10rpx;
  font-size: 30rpx;
  font-weight: bold;
  text-align: left;
}

.cart_page .cart_content .cart_item .text_info .remark {
  margin: 10rpx;
  font-size: 20rpx;
  color: var(--text-color-gray);
  text-align: left;
}

.cart_page .cart_content .cart_item .text_info .price {
  width: 20%;
  margin: 10rpx;
  font-size: 30rpx;
  text-align: left;
  color: var(--text-color-red);
}

.cart_page .cart_content .cart_item .text_info .price text {
  font-size: 24rpx;
  font-weight: bold;
  color: var(--text-color-red);
}

.cart_page .cart_content .cart_item .text_info .count {
  position: absolute;
  right: 10%;
  bottom: 10%;
  display: flex;
}

.cart_page .cart_content .cart_item .text_info .count .btn {
  width: 35rpx;
  height: 35rpx;
  color: white;
  border-radius: 50%;
}

.cart_page .cart_content .cart_item .text_info .count .count_num {
  font-size: 30rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.cart_page .cart_content .content_bottom {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  color: var(--text-color-gray);
  margin-top: 10rpx;
  margin-bottom: 30rpx;
}

.cart_bottom {
  position: relative;
  width: 100%;
  height: 8%;
  display: flex;
}

.cart_bottom .left {
  position: relative;
  flex: 5;
  background: rgb(253, 244, 208);
}

.cart_bottom .left image {
  position: absolute;
  flex: 1;
  top: -40rpx;
  left: 35rpx;
  width: 80rpx;
  height: 80rpx;
  background: var(--theme-color);
  padding: 20rpx;
  border-radius: 50%;
  border: white solid 5rpx;
}

.cart_bottom .left .sum_badge {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  left: 130rpx;
  top: -30rpx;
  border-radius: 50%;
  background: red;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 20rpx;
  color: white;
}

.cart_bottom .left .sum_container {
  position: absolute;
  display: flex;
  align-items: center;
  right: 0;
  width: 60%;
  height: 100%;
}

.cart_bottom .left .sum_container .sum {
  font-size: 32rpx;
  color: var(--theme-color);
  font-weight: bold;
}

.cart_bottom .right {
  flex: 2;
  display: flex;
  background: lightgray;
  justify-content: center;
  align-items: center;
  color: white;
}


/* 选择就餐人数 */
.nOfDiners_page {
  position: absolute;
  height: 50%;
  width: 100%;
  bottom: 0;
  background: var(--ground-color);
}

.nOfDiners_page .title {
  text-align: center;
  font-size: 34rpx;
  color: var(--text-color-gray);
  padding: 20rpx;
}

.nOfDiners_page .cancel {
  position: absolute;
  top: 25rpx;
  right: 40rpx;
  font-size: 28rpx;
  color: var(--text-color-gray-light-1);
}


.nOfDiners_page .option_box {
  width: 750rpx;
  display: flex;
  flex-wrap: wrap;
  padding: 30rpx;
}

.nOfDiners_page .option_box .row {
  width: 690rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.nOfDiners_page .option_box .row .option {
  flex: 1;
  display: flex;
  height: 80rpx;
  justify-content: center;
  align-items: center;
  background: white;
  color: var(--text-color-gray);
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  border-radius: 15rpx;
}

.nOfDiners_page .option_box .row .active {
  background: var(--theme-color);
  color: white;
}

.nOfDiners_page .submit_btn {
  width: 650rpx;
  height: 80rpx;
  margin-left: 50rpx;
  margin-right: 50rpx;
  margin-top: 20rpx;
  border-radius: 15rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: var(--theme-color);
  color: white;
}

.line {
  width: 690rpx;
  height: 3rpx;
  background: var(--text-color-gray-light-2);
  margin-left: 30rpx;
  margin-right: 30rpx;
}