<view class="main">
  <view class="title" hidden="{{order.state!=0}}">
    订单进行中...
  </view>
  <view class="block">
    <view class="head">收费明细</view>
    <view class="food_item" wx:for="{{order.content}}" wx:key="id">
      <view class="image_info">
        <image src="{{item.image}}"></image>
      </view>
      <view class="text_info">
        <view class="name">{{item.name}}</view>
        <view class="remark">{{item.remark}}</view>
        <view class="price"><text>¥</text>{{item.price}}</view>
        <view class="count">
          <view class="num">
            x {{item.count}}
          </view>
        </view>
      </view>
    </view>
    <view class="other_item">
      <view class="left">餐位费 <text>¥{{order.mealFee}}</text></view>
      <view class="right"> x {{order.nofDiners}}</view>
    </view>
    <view class="bottom">
      <view>合计 <text> <text style="font-size:28rpx">¥</text>{{order.sum}} </text> </view>
    </view>
  </view>

  <view class="block">
    <view class="head">客户备注</view>
    <view class="cus_remark">
      {{order.remark==''?'无':order.remark}}
    </view>
  </view>

  <view class="block">
    <view class="head">订单信息</view>
    <view class="order_info">
      <view class="info">
        <view class="left">订单编号</view>
        <view class="right">{{order.id}}</view>
      </view>
      <view class="info">
        <view class="left">下单时间</view>
        <view class="right">{{order.date}}</view>
      </view>
      <view class="info">
        <view class="left">就餐桌号</view>
        <view class="right">{{order.tableId}}号桌</view>
      </view>
      <view class="info">
        <view class="left">用餐人数</view>
        <view class="right">{{order.nofDiners}}人</view>
      </view>
    </view>
  </view>

</view>