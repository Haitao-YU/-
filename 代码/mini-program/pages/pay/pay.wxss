.top {
  height: 85%;
}

.total {
  display: flex;
  width: 100%;
  height: 15%;
  justify-content: center;
  align-items: center;
}

.total .bar {
  width: 700rpx;
  height: 100rpx;
  display: flex;
  border-radius: 50rpx;
  overflow: hidden;
}

.total .left {
  flex: 3;
  background: white;
  display: flex;
  align-items: center;
  padding-left: 40rpx;
}

.total .left text {
  color: var(--text-color-red);
  font-weight: bold;
}

.total .right {
  flex: 1;
  font-size: 30rpx;
  font-weight: bold;
  background: var(--theme-color);
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
}

.total .right_hover {
  flex: 1;
  font-size: 30rpx;
  font-weight: bold;
  background: var(--theme-color-light-1);
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
}

.block {
  width: 700rpx;
  margin: 25rpx;
  padding-top: 15rpx;
  background: white;
  border-radius: 15rpx;
}

.block .head {
  font-size: 30rpx;
  padding-left: 20rpx;
  color: var(--text-color-gray);
  padding-bottom: 10rpx;
  border-bottom: lightgray solid 2rpx;
}

.block .content .food_item {
  display: flex;
  margin: 10rpx;
  padding: 10rpx;
}

.block .content .food_item .image_info {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}

.block .content .food_item .image_info image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
}

.block .content .food_item .text_info {
  position: relative;
  flex: 2;
}

.block .content .food_item .text_info .name {
  margin: 10rpx;
  font-size: 30rpx;
  font-weight: bold;
  text-align: left;
}

.block .content .food_item .text_info .remark {
  margin: 10rpx;
  font-size: 20rpx;
  color: var(--text-color-gray);
  text-align: left;
}

.block .content .food_item .text_info .price {
  width: 20%;
  margin: 10rpx;
  font-size: 30rpx;
  text-align: left;
  color: var(--text-color-red);
}

.block .content .food_item .text_info .price text {
  font-size: 24rpx;
  font-weight: bold;
  color: var(--text-color-red);
}

.block .content .food_item .text_info .count {
  position: absolute;
  right: 10%;
  bottom: 10%;
  display: flex;
}

.block .content .food_item .text_info .count .num {
  font-size: 30rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.block .content .other_item {
  display: flex;
}

.block .content .other_item .cell {
  flex: 1;
  color: var(--text-color-gray-light-1);
  font-size: 28rpx;
  padding-left: 40rpx;
}

.block .content .other_item .cell text {
  color: var(--text-color-red);
}

.block .bottom {
  padding: 30rpx;
  text-align: right;
  font-size: 30rpx;
}

.block .bottom text {
  font-weight: bold;
  color: var(--text-color-red);
}

.block .input_box {
  display: flex;
  justify-content: center;
  align-items: center;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
}

.block .input_box .remark {
  width: 600rpx;
  height: 200rpx;
  font-size: 30rpx;
  color: var(--text-color-gray);
}

.pay_box {
  position: absolute;
  height: 100%;
  width: 100%;
  top: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.pay {
  width: 550rpx;
  height: 550rpx;
  background: white;
  border-radius: 30rpx;
}

.pay .head {
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.pay .head .left {
  flex: 1;
  text-align: left;
}

.pay .head .left image {
  width: 25rpx;
  height: 25rpx;
}

.pay .head .right {
  flex: 1;
  color: rgb(95, 104, 124);
  text-align: right;
  font-weight: bold;
  font-size: 30rpx;
}

.pay .name {
  padding-top: 30rpx;
  text-align: center;
  font-size: 32rpx;
}

.pay .money {
  display: flex;
  justify-content: center;
  align-items: center;
  font-weight: bold;
  padding: 30rpx;
}

.pay .money .unit {
  font-size: 50rpx;
  padding: 5rpx;
}

.pay .money .amount {
  font-size: 70rpx;
  padding: 5rpx;
}

.pay .method {
  display: flex;
  align-items: center;
  color: #707070;
  font-size: 28rpx;
}

.pay .method .left {
  flex: 1;
  align-items: left;
  padding-left: 30rpx;
}

.pay .method .right {
  flex: 1;
  align-items: right;
  padding-right: 30rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.pay .method .right .coin {
  width: 35rpx;
  height: 35rpx;
  margin: 10rpx;
}

.pay .method .right .arrow {
  width: 30rpx;
  height: 30rpx;
}


.btn_box {
  padding: 50rpx;
}
