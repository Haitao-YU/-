.bg {
  width: 100%;
  height: 100%;
  background: rgb(240, 232, 232);
}

.bg .top {
  width: 100%;
  height: 20%;
  border-bottom-left-radius: 30rpx;
  border-bottom-right-radius: 30rpx;
  background: var(--theme-color-light-1);
}

.body {
  position: absolute;
  top: 0;
  height: 100%;
  width: 100%;
}

.swiper_box {
  display: flex;
  height: 30%;
  justify-content: center;
  align-items: center;
  padding: 30rpx;
}

.swiper {
  width: 100%;
  height: 100%;
  border-radius: 30rpx;
  overflow: hidden;
}

.swiper image {
  width: 100%;
  height: 100%;
}

.row {
  display: flex;
  justify-content: space-between;
  padding-left: 15rpx;
  padding-right: 15rpx;
}

.btn {
  padding: 30rpx !important;
  border-radius: 20rpx !important;
  box-shadow: none !important;
  margin: 15rpx !important;
}

.btn::after {
  border: none;
}

.btn image {
  width: 100rpx;
  height: 100rpx;
}

.btn .label {
  font-size: 28rpx;
  font-weight: bold;
  color: var(--text-color-gray);
}